<div class="login">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-label-group">
      <%= f.text_field  :username, autofocus: true, autocomplete: "username", placeholder: 'username', :class => 'form-control' %>
    </div>

    <div class="form-label-group">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: 'password', :class => 'form-control' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-label-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <button id="loginBtn" class="loginBtn btn btn-lg btn-primary btn-block text-uppercase" type="submit"><i
            class="fas fa-sign-in-alt"></i> Submit</button>
    </div>
  <% end %>
</div>